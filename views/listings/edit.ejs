<% layout('/layouts/boilerPlate') %>
  <body>

    <div class="row mt-3">
      <div class="col-7 offset-2">

        <h3 class="head">Edit your Listing</h3>
        <form action="/Listings/<%= data._id %>?_method=PUT" method="post" class="form">
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input
              type="text"
              value="<%= data.title %>"
              name="listing[title]"
              class="form-control"
            />
          </div>
    
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" name="listing[description]" class="form-control">
              <%= data.description %>
            </textarea>
          </div>
    
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <input
              value="<%= data.image %>"
              name="listing[image]"
              class="form-control"
            />
          </div>
    
          <div class="row ">
            <div class="mb-3 col-4">
              <label for="number" class="form-label">Number</label>
              <input
                type="number"
                value="<%= data.price %>"
                name="listing[price]"
                class="form-control"
              />
            </div>
      
            <div class="mb-3 col-8">
              <label for="location" class="form-label">Location</label>
              <input
                type="text"
                value="<%= data.location %>"
                name="listing[location]"
                class="form-control"
              />
            </div>
          </div>
          
    
          <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input
              type="text"
              value="<%= data.country %>"
              name="listing[country]"
              class="form-control"
            />
          </div>
    
          <button class="btn add-btn mb-4">Sent data !</button>
        </form>

      </div>
    </div>


  </body>

