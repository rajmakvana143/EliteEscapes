<% layout('/layouts/boilerPlate') %>
<body>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let Listing of allListings){ %>
    <a href="/Listings/<%= Listing._id %>" class="linking-list">
      <div class="card">
        <img
          src="<%= Listing.image %>"
          class="card-img-top"
          alt="Listing image"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= Listing.title %> <br /></b>
             &#8377; <%= Listing.price %> / night
          </p>
        </div>
      </div>
      <% } %>
    </a>
  </div>
</body>
